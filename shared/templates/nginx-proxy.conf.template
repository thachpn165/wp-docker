server {
    listen 80;
    server_name ${DOMAIN};

    # üöÄ Chuy·ªÉn h∆∞·ªõng HTTP sang HTTPS
    return 301 https://${DOMAIN}$request_uri;
}

server {
    listen 443 ssl;
    server_name ${DOMAIN};
    root /var/www/${SITE_NAME};
    index index.php index.html index.htm;

    # üîê Ch·ª©ng ch·ªâ SSL
    ssl_certificate /etc/nginx/ssl/${DOMAIN}.crt;
    ssl_certificate_key /etc/nginx/ssl/${DOMAIN}.key;

    # ‚úÖ B·∫£o m·∫≠t SSL
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # üîí B·∫≠t HSTS
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

    # üì• **Include cache configuration (m·∫∑c ƒë·ªãnh l√† no-cache)**
    include /etc/nginx/cache/no-cache.conf;

    # üìå X·ª≠ l√Ω file tƒ©nh (c√°c file h√¨nh ·∫£nh, JS, CSS, fonts...)
    location ~* \.(ico|css|js|gif|jpg|jpeg|png|woff2?|ttf|eot|svg|mp4|webm|ogv|webp|pdf|zip|tar|gz|bz2|rar|7z|xml|rss|atom|txt|json|map)$ {
        expires max;
        access_log off;
    }

    # üõ†Ô∏è **X·ª≠ l√Ω PHP v·ªõi PHP-FPM**
    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_pass ${SITE_NAME}-php:9000;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME /var/www/html$fastcgi_script_name;
        fastcgi_buffers 16 16k;
        fastcgi_buffer_size 32k;
        fastcgi_read_timeout 300;
        fastcgi_intercept_errors on;
    }

    # ‚úÖ B·∫£o m·∫≠t HTTP Headers
    add_header X-Frame-Options SAMEORIGIN;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Referrer-Policy "strict-origin-when-cross-origin";
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()";

    error_log  /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
}
